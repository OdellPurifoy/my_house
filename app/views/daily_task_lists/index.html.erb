<p id="notice"><%= notice %></p>

<h1>Daily Task Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Completed</th>
      <th>User</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_task_lists.each do |daily_task_list| %>
      <tr>
        <td><%= daily_task_list.title %></td>
        <td><%= daily_task_list.description %></td>
        <td><%= daily_task_list.completed %></td>
        <td><%= daily_task_list.user_id %></td>
        <td><%= daily_task_list.task_id %></td>
        <td><%= link_to 'Show', daily_task_list %></td>
        <td><%= link_to 'Edit', edit_daily_task_list_path(daily_task_list) %></td>
        <td><%= link_to 'Destroy', daily_task_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

