<!DOCTYPE html>
<html>
  <head>
    <title>MyHouse</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Start of navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "MyHouse", root_path, class:"navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <% if user_signed_in? && current_user.admin? %>
          <ul class="navbar-nav">
            <li class="nav-item active">
              <%= link_to "Create Daily Task List", new_daily_task_list_path, class:"btn btn-primary" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"btn btn-danger" %>
            </li>
          </ul>

        <% else %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Sign In", new_user_session_path, class:"navbar-item button btn btn-primary" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path, class:"navbar-item btn btn-primary"%>
            </li>
          </ul>
        </div>
      <% end %>
    </nav>
    <!-- End of navbar -->

    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>